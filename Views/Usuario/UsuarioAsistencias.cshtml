@using KadabraMVC.Models
@model List<Asistencia>
@*esto tiene que ser model asistencias*@

<div class="container">
    <table class="table table-hover" style="max-width:1000px; margin:50px auto; ">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Turno</th>
                <th>Profesor</th>
                <th>Asistencia</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var asistencia in Model)
            {
                <tr>
                    @{
                        string Fecha = asistencia.IdClaseNavigation.HorarioClase.Day.ToString() + "/" + asistencia.IdClaseNavigation.HorarioClase.Month.ToString();
                        string Hora = asistencia.IdClaseNavigation.HorarioClase.Hour.ToString() + ":00";
                    }
                    <td>@Fecha</td>
                    <td>@Hora</td>

                    <td>Nombre profesor de la bd</td>

                    <td>
                        ausente presente etc

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form action="InicioProfesor">
        <span class="d-flex justify-content-center">
            <button class="btn btn-outline-dark">Volver</button>
        </span>
    </form>
</div>