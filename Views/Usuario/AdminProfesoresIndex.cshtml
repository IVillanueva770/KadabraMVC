@using KadabraMVC.Models
@model List<Usuario> //Profesores

<h1>Profesores</h1>
<table class="table table-hover">
    <thead>
        <tr class="">
            <th>Nombre</th>
            <th>Fecha de Registro</th>
            <th>Historial</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var profesor in @Model)
        {
            <tr>
                <td>@Html.DisplayFor(m=>profesor.Nombre) @Html.DisplayFor(m=>profesor.Apellido)</td>
                <td>@Html.DisplayFor(m=>profesor.FechaDeAlta)</td>
                <td> <input class="btn btn-outline-info" type="button" value="Detalle" /> </td>
            </tr>
        }
    </tbody>
</table>

<div class="table">
    <form asp-action="InicioAdministrativo">
        <div class="d-flex justify-content-start">
            <button class="btn btn-outline-info">Volver</button>
        </div>
    </form>


    <form asp-action="formNuevoProfesor">
        <div class="d-flex justify-content-end">
            <button class="btn btn-info">Agregar Profesor</button>
        </div>
    </form>
</div>
<hr />
<br />
<h1>Posibilidades</h1>
