@model List<Clase>


<h1>Historial</h1>

<div class="container">
    <table class="table table-hover" style="max-width:1000px; margin:50px auto; ">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Turno</th>
                <th>Inscriptos</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var clase in Model)
            {
                <tr>
                    @{
                        string Fecha = clase.HorarioClase.Day.ToString() + "/" + clase.HorarioClase.Month.ToString();
                        string Hora = clase.HorarioClase.Hour.ToString() + ":00";
                    }
                    <td>@Fecha</td>
                    <td>@Hora</td>

                    <td>Recuento de inscriptos / @Html.DisplayFor(m=>clase.Capacidad)</td>

                    <td>
                        <input class="btn btn-outline-info" type="button" value="Asistencias" />

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form action="InicioProfesor">
        <span class="d-flex justify-content-center">
            <button class="btn btn-outline-dark">Volver</button>
        </span>
    </form>
</div>