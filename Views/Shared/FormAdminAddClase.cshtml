@using KadabraMVC.ViewModels
@model NuevaClaseViewModel


<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="NuevaClase" asp-controller="Clase">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HorarioClase" class="control-label"></label>
                <input asp-for="HorarioClase" class="form-control" type="datetime-local" inputmode="" />
                <span asp-validation-for="HorarioClase" class="text-danger"></span>
            </div>


            <div class="form-group">

                <label asp-for="IdProfesor" class="control-label"></label>
                <select asp-for="IdProfesor" asp-items="ViewBag.Profesores" class="form-control"></select>

                <span asp-validation-for="IdProfesor" class="text-danger"></span>

            </div>



            <div class="form-group">
                <input type="submit" value="Registrar nueva clase" class="btn btn-info float-end" />
            </div>
        </form>

    </div>
</div>

<form>
<div class="d-flex justify-content-center">
        <button value="Volver" class="btn btn-info" asp-controller="Clase" asp-action="AdminClasesIndex" >Volver</button>
</div>
</form>