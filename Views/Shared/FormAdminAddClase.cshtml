            </div>


            @*<div class="form-group">
                <select asp-items="ViewBag.Profesores"></select>
            </div>
*@


            <div class="form-group">
                <input type="submit" value="Registrar nueva clase" class="btn btn-info float-end" />
            </div>
        </form>
    </div>
</div>
