@model Clase


<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="NuevaClase" asp-controller="Clase">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="HorarioClase" class="control-label"></label>
                <input type="datetime-local" asp-for="HorarioClase" class="form-control" />
